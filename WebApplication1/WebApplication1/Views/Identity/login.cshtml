
@{
    ViewData["Title"] = "Login Page";
}


    <div class="row login-form-body">
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
            <div class="card border-0 shadow rounded-3 my-5">
                <div class="card-body p-4 p-sm-5">
                    <h2 class="card-title text-center mb-5 fw-bolder ">LogIn</h2>
                    <form>
                        <div class="d-grid ">
                            <button class="btn btn-google btn-login text-uppercase fw-bold border-1 login-google mb-3" type="submit">
                                <img src="~/Assets/img/Group.svg"/> Sign in with Google
                            </button>
                        </div>
                        <hr class="my-6 ">
                        <div class="form-floating mb-3 mt-4">
                            <input type="email" class="form-control" id="floatingInput" placeholder="name@example.com">
                            <label for="floatingInput">Name</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="password" class="form-control" id="floatingPassword" placeholder="Password">
                            <label for="floatingPassword">Password</label>
                        </div>
          
                        <div class="form-check mb-4">
                            <input class="form-check-input" type="checkbox" value="" id="rememberPasswordCheck">
                            <label class="form-check-label" for="rememberPasswordCheck">
                                Remember password
                            </label>
                            
                            <a class="text-decoration-underline text-black forget-pass-link ">
                                Forget Password?
                            </a>
                        </div>
             
                        <div class="d-grid">
                        <button class="btn btn-primary bg-black text-white btn-login text-uppercase fw-bold login-btn " type="submit">
                               LOGIN
                            </button>
                        </div>
                      
                       <div class="new-signup-link mt-3">
                            New here? <a href="/signup" class="text-black text-decoration-underline fw-bold">Create an acount </a>
                       </div>
                       
                    </form>
                </div>
            </div>
        </div>
    </div>
